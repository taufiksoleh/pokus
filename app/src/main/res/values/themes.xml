<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.Pokus" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Pokus.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_700</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Pokus</item>
    </style>

    <!-- Overlay theme for blocking screen -->
    <style name="Theme.Pokus.Overlay" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/purple_900</item>
        <item name="android:statusBarColor">@color/purple_900</item>
        <item name="android:navigationBarColor">@color/purple_900</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
